@prefix rbox: <http://www.researchbox.org/ontology#> . # our own ontology
@prefix foaf: <http://xmlns.com/foaf/0.1/> . # person vocabulary 
@prefix schema: <http://schema.org/> . # 

:customer a rbox:Customer ;
    rbox:hasName "Vinzent Aschir" ;
    rbox:hasEmail "vinzent.aschir@example.com" .

:recipe a rbox:Recipe ;
    # properties of the recipe
    rbox:hasID "recipe001" ;
    rbox:hasTitle "Spaghetti Carbonara" ;
    rbox:hasDescription "A classic Italian pasta dish made with eggs, cheese, pancetta, and pepper." ;
    
    rbox:hasServings "4" ;
    rbox:hasCuisine "Italian" ;
    rbox:hasCategory "Main Course" ;
    #properties of the ingredients
    rbox:hasAllergenInfo "Contains eggs and dairy." ;

    #properties of the preparation
    rbox:hasPreparationTime "20 minutes" ;
    rbox:hasInstructions "1. Cook spaghetti according to package instructions. 2. In a pan, cook pancetta until crispy. 3. Beat eggs and mix with grated Parmesan cheese. 4. Combine hot spaghetti with pancetta and egg mixture, stirring quickly to create a creamy sauce. 5. Season with black pepper and serve immediately." ;

    # properties of reuse 
    rbox:hasReview [
        rbox:hasReviewer :customer ;
        rbox:hasRating "5 stars" ;
        rbox:hasComment "Delicious and easy to make! A family favorite." ;
    ] ;
    
    
    


    rbox:hasIngredient [
        rbox:hasName "Spaghetti" ;
        rbox:hasQuantity "400 grams";
    ] ,
    [
        rbox:hasName "Pancetta" ;
        rbox:hasQuantity "150 grams";
    ],
    [
        rbox:hasName "Eggs" ;
        rbox:hasQuantity "4 large";
    ],
    [
        rbox:hasName "Parmesan cheese" ;
        rbox:hasQuantity "100 grams";
    ],
    [
        rbox:hasName "Black pepper" ;
        rbox:hasQuantity "to taste";
    ] 






