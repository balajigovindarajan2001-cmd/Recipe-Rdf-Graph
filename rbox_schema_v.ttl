### subclases of Recipe:  ######
# type of recipes
    rbox:VegetarianRecipe a rdfs:Class ;
        rdfs:label "Vegetarian Recipe"@en, "Vegetarisches Rezept"@de ;
        rdfs:comment "A recipe that does not include meat or fish."@en,
                     "Ein Rezept, das kein Fleisch oder Fisch enthält."@de ;
        rdfs:subClassOf :Recipe .

    rbox:VeganRecipe a rdfs:Class ;
        rdfs:label "Vegan Recipe"@en, "Veganes Rezept"@de ;
        rdfs:comment "A recipe that does not include any animal products."@en,
                     "Ein Rezept, das keine tierischen Produkte enthält."@de ;
        rdfs:subClassOf :Recipe .   
    

# course type 
    rbox:course a rdfs:class ; 
        rdfs:label "Course"@en, "Kurs"@de ;
        rdfs:comment "A type of course for a recipe."@en,
                     "Eine Art von Gericht für ein Rezept."@de ;
        rdfs:subClassOf :Recipe .

    rbox:Appetizer a rdfs:Class ;
        rdfs:label "Appetizer"@en, "Vorspeise"@de ;
        rdfs:comment "A recipe for a starter dish."@en,
                     "Ein Rezept für eine Vorspeise."@de ;
        rdfs:subClassOf rbox:course .
    
    rbox:MainDish a rdfs:Class ;
        rdfs:label "Main Dish"@en, "Hauptgericht"@de ;
        rdfs:comment "A recipe for a main course."@en,
                     "Ein Rezept für ein Hauptgericht."@de ;
        rdfs:subClassOf rbox:course .
    
    rbox:Dessert a rdfs:Class ;
        rdfs:label "Dessert"@en, "Nachtisch"@de ;
        rdfs:comment "A recipe for a dessert."@en,
                     "Ein Rezept für einen Nachtisch."@de ;
        rdfs:subClassOf rbox:course .
    

# cuisine type
    rbox:Cuisine a rdfs:Class ;
        rdfs:label "Cuisine"@en, "Küche"@de ;
        rdfs:comment "A type of cuisine for a recipe."@en,
                     "Eine Art von Küche für ein Rezept."@de .

    rbox:ItalianCuisine a rdfs:Class ;
        rdfs:label "Italian Cuisine"@en, "Italienische Küche"@de ;
        rdfs:comment "A recipe from Italian cuisine."@en,
                     "Ein Rezept aus der italienischen Küche."@de ;
        rdfs:subClassOf rbox:Cuisine .

    rbox:ChineseCuisine a rdfs:Class ;
        rdfs:label "Chinese Cuisine"@en, "Chinesische Küche"@de ;
        rdfs:comment "A recipe from Chinese cuisine."@en,
                     "Ein Rezept aus der chinesischen Küche."@de ;
        rdfs:subClassOf rbox:Cuisine .

    rbox:MexicanCuisine a rdfs:Class ;
        rdfs:label "Mexican Cuisine"@en, "Mexikanische Küche"@de ;
        rdfs:comment "A recipe from Mexican cuisine."@en,
                     "Ein Rezept aus der mexikanischen Küche."@de ;
        rdfs:subClassOf rbox:Cuisine .

    rbox:IndianCuisine a rdfs:Class ;
        rdfs:label "Indian Cuisine"@en, "Indische Küche"@de ;
        rdfs:comment "A recipe from Indian cuisine."@en,
                     "Ein Rezept aus der indischen Küche."@de ;
        rdfs:subClassOf rbox:Cuisine .

    rbox:FrenchCuisine a rdfs:Class ;
        rdfs:label "French Cuisine"@en, "Französische Küche"@de ;
        rdfs:comment "A recipe from French cuisine."@en,
                     "Ein Rezept aus der französischen Küche."@de ;
        rdfs:subClassOf rbox:Cuisine .
   
    rbox:GermanCuisine a rdfs:Class ;
        rdfs:label "German Cuisine"@en, "Deutsche Küche"@de ;
        rdfs:comment "A recipe from German cuisine."@en,
                     "Ein Rezept aus der deutschen Küche."@de ;
        rdfs:subClassOf rbox:Cuisine . 


#### properties ######
# recipe properties
    rbox:hasID a rdfs:DatatypeProperty ;
        rdfs:domain rbox:Recipe ;
        rdfs:range xsd:string ; 
        rdfs:label "has ID"@en, "hat ID"@de ;
        rdfs:comment "A unique identifier for the recipe."@en,
                 "Eine eindeutige Kennung für das Rezept."@de .

    rbox:hasTitle a rdfs:DatatypeProperty ;
        rdfs:domain rbox:Recipe ;
        rdfs:range xsd:string ;
        rdfs:label "has title"@en, "hat Titel"@de ;
        rdfs:comment "The title of the recipe."@en,
                 "Der Titel des Rezepts."@de .

    rbox:hasDescription a rdfs:DatatypeProperty ;
        rdfs:domain rbox:Recipe ;
        rdfs:range xsd:string ;
        rdfs:label "has description"@en, "hat Beschreibung"@de ;
        rdfs:comment "A brief description of the recipe."@en,
                 "Eine kurze Beschreibung des Rezepts."@de .
    
    rbox:hasInstructions a rdfs:DatatypeProperty ;
        rdfs:domain rbox:Recipe ;
        rdfs:range xsd:string ;
        rdfs:label "has instructions"@en, "hat Anweisungen"@de ;
        rdfs:comment "The preparation instructions for the recipe."@en,
                     "Die Zubereitungsanweisungen für das Rezept."@de .

    rbox:hasIngredient a rdfs:ObjectProperty ;
        rdfs:domain rbox:Recipe ;
        rdfs:range rbox:Ingredient ;
        rdfs:label "has ingredient"@en, "hat Zutat"@de ;
        rdfs:comment "Links a recipe to its ingredients."@en,
                     "Verknüpft ein Rezept mit seinen Zutaten."@de .
    rbox:hasCuisine a rdfs:ObjectProperty ;
        rdfs:domain rbox:Recipe ;
        rdfs:range rbox:Cuisine ;
        rdfs:label "has cuisine"@en, "gehört zur Küche"@de ;
        rdfs:comment "Specifies the cuisine type of the recipe."@en,
                     "Gibt die Küchenart des Rezepts an."@de .
        
    #ingredient properties
    rbox:hasName a rdfs:DatatypeProperty ;
        rdfs:domain rbox:Ingredient ;
        rdfs:range xsd:string ;
        rdfs:label "has name"@en, "hat Name"@de ;
        rdfs:comment "The name of the ingredient."@en,
                     "Der Name der Zutat."@de .
    
    rbox:hasQuantity a rdfs:DatatypeProperty ;
        rdfs:domain rbox:Ingredient ;
        rdfs:range xsd:string ;
        rdfs:label "has quantity"@en, "hat Menge"@de ;
        rdfs:comment "The quantity of the ingredient required for the recipe."@en,
                     "Die Menge der Zutat, die für das Rezept benötigt wird."@de .
    
    #Quantity property linking Ingredient and Quantity class
    rbox:hasAmount a rdfs:ObjectProperty ;
        rdfs:domain rbox:Ingredient ;
        rdfs:range rbox:Quantity ;
        rdfs:label "has amount"@en, "hat Menge"@de ;
        rdfs:comment "Links an ingredient to its quantity."@en,
                     "Verknüpft eine Zutat mit ihrer Menge."@de .
    rbox:hasUnit a rdfs:DatatypeProperty ;
        rdfs:domain rbox:Quantity ;
        rdfs:range xsd:string ;
        rdfs:label "has unit"@en, "hat Einheit"@de ;
        rdfs:comment "The unit of measurement for the quantity."@en,
                     "Die Maßeinheit für die Menge."@de .
                     
rbox:hasAllergenInfo a rdfs:ObjectProperty ;
    rdfs:domain rbox:Recipe , rbox:Ingredient ;
    rdfs:range rbox:Allergen ; 
    rdfs:label "has allergen info"@en, "hat Allergeninformation"@de ;
    rdfs:comment "Provides allergen information for the recipe."@en,
                 "Bietet Allergeninformationen für das Rezept."@de .
    #owl:propertyChainAxiom ( :hasIngredient rbox:hasAllergenInfo ) .


